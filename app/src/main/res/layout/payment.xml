<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azureishWhite"
    tools:context=".PaymentActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/meios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        app:srcCompat="@drawable/pag" />

    <TextView
        android:id="@+id/textPayments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/meios"
        android:layout_marginTop="252dp"
        android:text="Outros meios:" />

    <ImageView
        android:id="@+id/visa"
        android:layout_width="68dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/meios"
        android:layout_marginTop="117dp"
        app:srcCompat="@drawable/visa"
        android:layout_alignLeft="@+id/meios" />

    <TextView
        android:id="@+id/textMyPayments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/meios"
        android:layout_marginTop="81dp"
        android:text="Meus cartÃµes:"
        android:layout_alignLeft="@+id/meios" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/visa"
        android:layout_marginStart="149dp"
        android:text="Terminado em 1234"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="149dp" />

    <Button
        android:id="@+id/finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/aquamarine"
        android:text="Finalizar compra"
        android:textColor="@android:color/white" />
</RelativeLayout>